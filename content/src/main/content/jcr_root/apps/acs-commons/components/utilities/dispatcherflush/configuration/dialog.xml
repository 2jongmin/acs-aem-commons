<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    activeTab="0"
    title="Dispatcher Flush Configuration"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab1
            jcr:primaryType="cq:Widget"
            title="Dispatcher Flush Configuration"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <replicationactiontype
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Replication action type"
                        fieldDescription="Replication action type used to issue Dispatcher Flush requests. This effects how cached files are effected (invalidate or delete)."
                        defaultValue="ACTIVATE"
                        value="ACTIVATE"
                        name="./replicationActionType"
                        type="select"
                        xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <activate
                                jcr:primaryType="nt:unstructured"
                                text="Activate"
                                value="ACTIVATE"/>
                        <deactivate
                                jcr:primaryType="nt:unstructured"
                                text="Deactivate"
                                value="DEACTIVATE"/>
                        <delete
                                jcr:primaryType="nt:unstructured"
                                text="Delete"
                                value="DELETE"/>
                    </options>
                </replicationactiontype>
                <paths
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Click the '+' to add a new paths to flush"
                    fieldLabel="Paths to flush"
                    name="./paths"
                    xtype="multifield">
                    <fieldConfig
                        jcr:primaryType="cq:Widget"
                        showTitlesInTree="{Boolean}false"
                        rootPath="/"
                        predicate="[hierarchy]"
                        xtype="pathfield"/>
                </paths>
            </items>
        </tab1>
    </items>
</jcr:root>

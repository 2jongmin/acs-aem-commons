<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    activeTab="0"
    title="ACL Packaging Configuration"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab1
            jcr:primaryType="cq:Widget"
            title="ACL Packaging Configuration"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <packageName
                    jcr:primaryType="cq:Widget"
                    fieldDescription=""
                    fieldLabel="Package name"
                    name="./packageName"
                    xtype="textfield"/>
                <packageGroupName
                        jcr:primaryType="cq:Widget"
                        fieldDescription=""
                        fieldLabel="Package group name"
                        name="./packageGroupName"
                        xtype="textfield"/>
                <packageVersion
                        jcr:primaryType="cq:Widget"
                        fieldDescription=""
                        fieldLabel="Package version"
                        name="./packageVersion"
                        xtype="textfield"/>
                <principalNames
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Click the '+' to add a new principal to flush"
                    fieldLabel="Principal names"
                    name="./principalNames"
                    xtype="multifield">
                    <fieldConfig
                        jcr:primaryType="cq:Widget"
                        xtype="textfield"/>
                </principalNames>
            </items>
        </tab1>
    </items>
</jcr:root>
